
{% extends 'base.html.twig' %}

{% block body %}
    <form method="post" id="report-form" action="/export" >
        <fieldset>
            <div class="form-group">
                <label for="username" class="col-sm-3 control-label">Utilizator</label>
                <div class="col-sm-3">
                    <input type="text" class="form-control" id="username" name="username" placeholder="firstName.lastName" required="">
                </div>
            </div>
            <div class="form-group">
                <label for="password" class="col-sm-3 control-label">Parola</label>
                <div class="col-sm-3">
                    <input type="password" class="form-control" id="password" name="password" placeholder="password" required="">
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-3 control-label" for="company">Companie</label>
                <div class="col-sm-3">
                    <select class="form-control" name="company" id="company">
                        <option value="f4f0108a-c742-46eb-81be-262cd538e660">Dante</option>
                        <option value="623c0b14-2828-4351-ab00-f86f4e8cc0f2">EIT</option>
                    </select>
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-3 control-label" for="year">Anul</label>
                <div class="col-sm-3">
                    <select class="form-control" name="year" id="year">
                        <option value="2017">2017</option>
                        <option value="2018">2018</option>
                    </select>
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-3 control-label" for="month">Luna</label>
                <div class="col-sm-3">
                    <select class="form-control" name="month" id="month">
                        {% for i in 1..12 %}
                            {% set date = "2017-"~i %}
                            <option value="{{ date|date('m') }}">{{ date|date('M') }}</option>
                        {% endfor %}
                    </select>
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-offset-3 col-sm-9">
                    <button type="submit" class="btn btn-success"><i class="fa fa-check"></i><span>Exporta</span></button>
                </div>
            </div>
        </fieldset>
    </form>

{% endblock %}