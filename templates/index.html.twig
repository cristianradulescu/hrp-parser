
{% extends 'base.html.twig' %}

{% block body %}
    <div class="col-sm-12 col-md-6 col-lg-4">
        {% for message in app.flashes('error') %}
            <div class="alert alert-danger" role="alert"><p><i class="fa fa-minus-circle"></i>
                {{ message|trans }}
            </div>
        {% endfor %}
        <form method="post" id="report-form" action="/export-confirm" >
            <fieldset>
                <div class="form-group">
                    <label for="username" class="control-label">{{ label_user|trans }} *</label>
                    <input type="text" class="form-control" id="username" name="username" required="">
                </div>
                <div class="form-group">
                    <label for="password" class="control-label">{{ label_password|trans }} *</label>
                    <input type="password" class="form-control" id="password" name="password" required="">
                </div>
                <div class="form-group">
                    <label class="control-label" for="company">{{ label_company|trans }}</label>
                    <select class="form-control" name="company" id="company">
                        <option value="f4f0108a-c742-46eb-81be-262cd538e660">Dante</option>
                        <option value="623c0b14-2828-4351-ab00-f86f4e8cc0f2">EIT</option>
                    </select>
                </div>
                <div class="form-group">
                    <label class="control-label" for="year">{{ label_year|trans }}</label>
                    <select class="form-control" name="year" id="year">
                        <option value="2017">2017</option>
                        <option value="2018">2018</option>
                    </select>
                </div>
                <div class="form-group">
                    <label class="control-label" for="month">{{ label_month|trans }}</label>
                    <select class="form-control" name="month" id="month">
                        {% for i in 1..12 %}
                            {% set date = "2017-"~i %}
                            <option value="{{ date|date('m') }}">{{ date|date('M') }}</option>
                        {% endfor %}
                    </select>
                </div>
                <div class="form-group">
                    <div class="panel-controls pull-right">
                        <button type="submit" class="btn btn-success"><i class="fa fa-check"></i><span>{{ label_submit|trans }}</span></button>
                    </div>
                    <div class="help-block">
                        <small>* {{ form_info_required_fields|trans }}</small>
                    </div>
                </div>
            </fieldset>
        </form>
    </div>
{% endblock %}